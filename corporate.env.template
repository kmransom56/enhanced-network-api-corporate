# Corporate Network Observability Platform Configuration
# Copy this file to corporate.env and update with your corporate credentials

# ==================== API Configuration ====================
API_HOST=0.0.0.0
API_PORT=11111
API_DEBUG=false
API_CORS_ORIGINS=https://your-corp-domain.com,http://localhost:3000
API_RATE_LIMIT=100
API_TIMEOUT=30

# ==================== Database Configuration ====================
# PostgreSQL Database (recommended for production)
DATABASE_URL=postgresql://appuser:your_secure_password@postgres:5432/enhanced_network
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ==================== Logging Configuration ====================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/app/logs/enhanced-network.log
LOG_MAX_SIZE=52428800
LOG_BACKUP_COUNT=10

# ==================== FortiGate Devices ====================
# Add your corporate FortiGate devices
FORTIGATE_HOSTS=192.168.1.1,10.0.0.1,172.16.0.1

# FortiGate 1 - Main Office
FORTIGATE_192_168_1_1_TOKEN=your_corporate_token_1
FORTIGATE_192_168_1_1_NAME=Main_Office_FortiGate
FORTIGATE_192_168_1_1_PORT=10443

# FortiGate 2 - Data Center
FORTIGATE_10_0_0_1_TOKEN=your_corporate_token_2
FORTIGATE_10_0_0_1_NAME=DataCenter_FortiGate
FORTIGATE_10_0_0_1_PORT=10443

# FortiGate 3 - Branch Office
FORTIGATE_172_16_0_1_TOKEN=your_corporate_token_3
FORTIGATE_172_16_0_1_NAME=Branch_Office_FortiGate
FORTIGATE_172_16_0_1_PORT=10443

# Optional: Default token for new devices
# FORTIGATE_DEFAULT_TOKEN=your_default_corporate_token

# ==================== Meraki Configuration ====================
# Add your corporate Meraki configuration
MERAKI_API_KEY=your_corporate_meraki_api_key
MERAKI_ORG_ID=your_corporate_organization_id
MERAKI_BASE_URL=https://api.meraki.com/api/v1
MERAKI_TIMEOUT=30

# ==================== Custom Fortinet LLM ====================
# Your custom Fortinet LLM endpoint
LLM_BASE_URL=http://your-llm-server:11434
LLM_MODEL=fortinet-custom
LLM_TIMEOUT=60
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.3

# ==================== MCP Server Configuration ====================
# Fortinet MCP Server
MCP_FORTINET_HOST=127.0.0.1
MCP_FORTINET_PORT=11110

# Meraki MCP Server  
MCP_MERAKI_HOST=127.0.0.1
MCP_MERAKI_PORT=11112

# ==================== Topology Configuration ====================
TOPOLOGY_AUTO_REFRESH=true
TOPOLOGY_REFRESH_INTERVAL=60
TOPOLOGY_MAX_DEVICES=500
TOPOLOGY_ICON_PATH=/static/fortinet-icons
TOPOLOGY_DEFAULT_VIEW=3d

# ==================== Troubleshooting Configuration ====================
TROUBLESHOOTING_MAX_SESSIONS=50
TROUBLESHOOTING_SESSION_TIMEOUT=7200
TROUBLESHOOTING_AUTO_SAVE=true
TROUBLESHOOTING_SAVE_PATH=/app/troubleshooting_sessions

# ==================== Security Configuration ====================
# Corporate authentication (if using HTTP Basic)
BASIC_AUTH_ENABLED=false
BASIC_AUTH_USERS=user1:password1,user2:password2

# SSL/TLS Configuration (if using HTTPS)
SSL_ENABLED=false
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# ==================== Corporate Network Settings ====================
# Corporate proxy configuration (if required)
CORPORATE_PROXY_ENABLED=false
CORPORATE_PROXY_HOST=proxy.your-corp.com
CORPORATE_PROXY_PORT=8080
CORPORATE_PROXY_USERNAME=proxy_user
CORPORATE_PROXY_PASSWORD=proxy_password

# Corporate DNS settings
CORPORATE_DNS_ENABLED=false
CORPORATE_DNS_SERVERS=8.8.8.8,8.8.4.4

# ==================== Monitoring & Alerting ====================
# Grafana integration
GRAFANA_ENABLED=true
GRAFANA_PASSWORD=your_grafana_admin_password

# Alert configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.your-corp.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=alerts@your-corp.com
ALERT_EMAIL_PASSWORD=your_email_password
ALERT_EMAIL_FROM=Network Observability <alerts@your-corp.com>
ALERT_EMAIL_TO=network-team@your-corp.com

# Slack integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ==================== Performance Configuration ====================
# Caching settings
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==================== Backup Configuration ====================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# ==================== Team Configuration ====================
# Team members for multi-user access
TEAM_MEMBERS=team.member1,team.member2,team.member3

# Dashboard sharing
DASHBOARD_SHARING_ENABLED=true
DASHBOARD_PUBLIC_ACCESS=false

# ==================== Development Settings ====================
# Enable development features in corporate environment
DEV_FEATURES_ENABLED=false
DEBUG_ENDPOINTS=false
TEST_DATA_ENABLED=false
